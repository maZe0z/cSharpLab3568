            <ImageBrush ImageSource="background.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="24" Margin="127,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text=" "/>
        <TextBox x:Name="Health" HorizontalAlignment="Left" Height="22" Margin="127,109,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="MovementSpeed" HorizontalAlignment="Left" Height="24" Margin="127,137,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TurnRate" HorizontalAlignment="Left" Height="24" Margin="127,165,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NightVision" HorizontalAlignment="Left" Height="24" Margin="127,193,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Armor" HorizontalAlignment="Left" Height="24" Margin="127,221,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="MagicResistance" HorizontalAlignment="Left" Height="24" Margin="127,249,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AttackRange" HorizontalAlignment="Left" Height="24" Margin="127,277,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="BaseAttackTime" HorizontalAlignment="Left" Height="24" Margin="127,305,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Damage" HorizontalAlignment="Left" Height="24" Margin="127,333,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <Label Content="In order to add a hero to the database&#xD;&#xA; enter the following information:" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Height="50" Width="334" Foreground="White" FontFamily="Global Monospace"/>
        <Label x:Name="lbl" Content="Name" HorizontalAlignment="Left" Margin="0,81,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Health" HorizontalAlignment="Left" Margin="0,107,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Movement speed" HorizontalAlignment="Left" Margin="0,137,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.709,3.577" Height="26" FontFamily="Global Monospace" Foreground="White"/>
        <Label Content="Turn rate" HorizontalAlignment="Left" Margin="0,163,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Night vision" HorizontalAlignment="Left" Margin="0,191,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Armor" HorizontalAlignment="Left" Margin="0,219,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Magic resistance" HorizontalAlignment="Left" Margin="0,249,0,0" VerticalAlignment="Top" Width="129" Height="26" FontFamily="Global Monospace" Foreground="White"/>
        <Label Content="Attack range" HorizontalAlignment="Left" Margin="0,277,0,0" VerticalAlignment="Top" Width="103" RenderTransformOrigin="0.709,3.577" Height="26" FontFamily="Global Monospace" Foreground="White"/>
        <Label Content="Base attack time" HorizontalAlignment="Left" Margin="0,305,0,0" VerticalAlignment="Top" Width="127" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Damage" HorizontalAlignment="Left" Margin="0,333,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="89,374,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="20" FontFamily="Global Monospace" FontSize="14"/>
        <ListBox x:Name="HeroListView" HorizontalAlignment="Left" Height="276" Margin="271,80,0,0" VerticalAlignment="Top" Width="115"/>
        <TextBox x:Name="HeroCharacteristics" HorizontalAlignment="Left" Height="276" Margin="408,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" IsReadOnly="True"/>
        <Label Content="Hero list:" HorizontalAlignment="Left" Margin="271,49,0,0" VerticalAlignment="Top" Height="26" Width="115" Foreground="White" FontFamily="Global Monospace" FontSize="14"/>
        <Label Content="Hero's characteristics:" HorizontalAlignment="Left" Margin="408,49,0,0" VerticalAlignment="Top" Width="212" Height="26" Foreground="White" FontFamily="Global Monospace" FontSize="14"/>
        <Button Content="Show" HorizontalAlignment="Left" Margin="477,373,0,0" VerticalAlignment="Top" Width="75" Height="21" FontFamily="Global Monospace" FontSize="14" Click="Button_Click_1" RenderTransformOrigin="0.52,-1.619"/>
        <TextBox x:Name="AttackedHeroTextBox" HorizontalAlignment="Left" Height="23" Margin="746,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="27" RenderTransformOrigin="0.519,0.565"/>
        <TextBox x:Name="AttackingHeroTextBox" HorizontalAlignment="Left" Height="23" Margin="702,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="27"/>
        <Button x:Name="AttackButton" Content="Attack!" HorizontalAlignment="Left" Margin="702,146,0,0" VerticalAlignment="Top" Width="71" FontFamily="Global Monospace" FontSize="14" Click="AttackButton_Click"/>
        <Label Content="Enter attacking and &#xD;&#xA;attacked hero indexes:" HorizontalAlignment="Left" Margin="651,66,0,0" VerticalAlignment="Top" Width="197" Height="44" Foreground="White" FontFamily="Global Monospace" FontSize="14"/>
    </Grid>
</Window>
