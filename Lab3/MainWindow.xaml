        <Label Content="Health" HorizontalAlignment="Left" Margin="0,107,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Movement speed" HorizontalAlignment="Left" Margin="0,137,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.709,3.577" Height="26" FontFamily="Global Monospace" Foreground="White"/>
        <Label Content="Turn rate" HorizontalAlignment="Left" Margin="0,163,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Night vision" HorizontalAlignment="Left" Margin="0,191,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Armor" HorizontalAlignment="Left" Margin="0,219,0,0" VerticalAlignment="Top" Width="103" Height="26" Foreground="White" FontFamily="Global Monospace"/>
        <Label Content="Magic resistance" HorizontalAlignment="Left" Margin="0,249,0,0" VerticalAlignment="Top" Width="129" Height="26" FontFamily="Global Monospace" Foreground="White"/>
        <Label Content="Attack range" HorizontalAlignment="Left" Margin="0,277,0,0" VerticalAlignment="Top" Width="103" RenderTransformOrigin="0.709,3.577" Height="26" FontFamily="Global Monospace" Foreground="White"/>
