        <Label Content="Hero's characteristics:" HorizontalAlignment="Left" Margin="408,49,0,0" VerticalAlignment="Top" Width="212" Height="26" Foreground="White" FontFamily="Global Monospace" FontSize="14"/>
        <Button x:Name="RemoveButton" Content="Remove" HorizontalAlignment="Left" Margin="750,91,0,0" VerticalAlignment="Top" Width="58" FontFamily="Global Monospace" FontSize="13" RenderTransformOrigin="0.483,-5.55" Background="#FF5B2525" Foreground="White" Click="RemoveButton_Click"/>
